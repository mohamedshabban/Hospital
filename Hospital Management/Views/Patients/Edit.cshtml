@model Hospital_Management.ViewModels.RegisterPatientViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>RegisterPatientViewModel</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(c => c.Patient.Name)
        @Html.TextBoxFor(c => c.Patient.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Patient.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Patient.Age)
        @Html.TextBoxFor(c => c.Patient.Age, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Patient.Age)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Patient.Mobile)
        @Html.TextBoxFor(c => c.Patient.Mobile, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Patient.Mobile)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Patient.Result)
        @Html.TextBoxFor(c => c.Patient.Result, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Patient.Result)
    </div>


    <div class="form-group">
        @Html.LabelFor(c => c.Patient.DepartmentId)
        @Html.DropDownListFor(c => c.Patient.DepartmentId, new SelectList(Model.Departments, "Id", "Name"), "Select Doctor Department", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Patient.DepartmentId)
    </div>
   
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Doctors", "", new { @class = "btn btn-primary" })
</div>
