@model Hospital_Management.Models.Department
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.Image" alt="" >
        <div class="caption">
            <h3>
                @Html.ActionLink(@Model.Name, "Details","Departments", new { id = Model.Id },null)
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
    </div>
</div>