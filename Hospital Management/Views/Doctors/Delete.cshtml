@model Hospital_Management.ViewModels.DoctorCreate

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(c => c.Doctor.Name)
            @Html.TextBoxFor(c => c.Doctor.Name, new { @class = "form-control", disabled = "disabled" })
            @Html.ValidationMessageFor(m => m.Doctor.Name)
        </div>


        <div class="form-group">
            @Html.LabelFor(c => c.Doctor.DepartmentId)
            @Html.DropDownListFor(c => c.Doctor.DepartmentId, new SelectList(Model.Departments, "Id", "Name"), "Select Doctor Department", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Doctor.DepartmentId)
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> 

        </div>
    }

</div>

<div>
    @Html.ActionLink("Back to List", "Index", "Doctors", "", new { @class = "btn btn-primary" })
</div>
