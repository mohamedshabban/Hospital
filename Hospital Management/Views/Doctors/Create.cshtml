@using System.Collections
@model Hospital_Management.ViewModels.DoctorCreate

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>DoctorCreate</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(c => c.Doctor.Name)
        @Html.TextBoxFor(c => c.Doctor.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.Name)
    </div>


    <div class="form-group">
        @Html.LabelFor(c => c.Doctor.DepartmentId)
        @Html.DropDownListFor(c => c.Doctor.DepartmentId, new SelectList(Model.Departments, "Id", "Name"), "Select Doctor Department", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.DepartmentId)
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
